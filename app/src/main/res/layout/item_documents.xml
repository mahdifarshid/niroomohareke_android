<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    app:cardCornerRadius="3dp"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.application.mahabad.niroomohareke.View.CustomTextVazir
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="دیزل ژنراتور" />

        <com.application.mahabad.niroomohareke.View.ExpandableTextView
            android:id="@+id/description"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:animation_duration="700"
            android:maxLines="7"
            tools:text="دیزل ژنراتور" />


        <LinearLayout
            android:id="@+id/linear_download"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/description"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.application.mahabad.niroomohareke.View.CustomTextVazir
                android:text="دانلود فایل"
                android:id="@+id/txt_download"
                android:layout_below="@+id/description"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                app:srcCompat="@drawable/ic_cloud_download_black_24dp"
                android:layout_toLeftOf="@+id/txt_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>